<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="./images/favicon.ico">
  <title>David Gail Smith - Artist & Creative Coder</title>
  <meta name="author" content="David G. Smith">
  <meta name="description"
    content="Art gallery and portfolio for artist David Gail Smith, featuring original artwork, digital art, and creative coding projects.">

  <!-- Preload critical resources -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="canonical" href="https://www.davidgailsmith.com" />

  <!-- Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Rock+Salt&family=Jura:wght@300;400;600&family=Share+Tech+Mono&display=swap"
    rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="./css/modern.css">
</head>

<body>
  <!-- Data for JavaScript - loaded through JavaScript modules -->
  <script>
    // Define the data in a module pattern that will be loaded by modern.js
    window.appData = {
      contracts: [],
      projects: <% - JSON.stringify(projects) %>
    };
  </script>

  <!-- Header -->
  <%- include('header-modern'); %>

  <main>
    <!-- Splash area -->
    <section id="splash" class="section-spacing">
      <div class="container">
        <div class="hero">
          <div class="hero-text">
            <h1 class="display-heading">David G. Smith</h1>
            <p class="lead-text">Visual Artist, Creative Coder, Cross-media Maker</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects area -->
    <section id="projects-area" class="section-spacing">
      <div class="container">
        <h2 class="section-title">Projects</h2>
        <p class="section-description">Explore my portfolio of work</p>

        <div class="filters">
          <div class="search-container">
            <input type="text" id="search-term" class="search-input" placeholder="Search projects...">
          </div>

          <div class="category-filter-container">
            <select id="category-filter" class="category-select">
              <option value="all">All Categories</option>
              <% categories.forEach(category => { %>
              <option value="<%= category.category_name %>"><%= category.category_name %></option>
              <% }); %>
            </select>
          </div>
        </div>

        <div id="projects-grid" class="projects-grid"></div>
      </div>
    </section>

    <!-- Single Project Area -->
    <section id="single-project-area" class="section-spacing">
      <div class="container">
        <h2 class="section-title">Selected Project</h2>
        <div class="project-details">
          <div class="project-message" id="project-message">
            <p>Select a project from above to view details</p>
          </div>

          <div id="single-project-display" class="single-project-display d-none">
            <h3 id="project-title" class="project-title"></h3>
            <div class="project-image-container">
              <img id="project-image" src="" alt="" class="project-image">
            </div>
            <div class="project-info">
              <p id="project-description" class="project-description"></p>
              <div class="project-meta">
                <span id="project-medium" class="project-medium"></span>
                <span id="project-category" class="project-category"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Artist section -->
    <section id="artist" class="section-spacing">
      <div class="container">
        <h2 class="section-title">About the Artist</h2>
        <div class="artist-content">
          <div class="artist-image">
            <img src="./images/artist.jpg" alt="David Gail Smith" class="img-fluid">
          </div>
          <div class="artist-bio">
            <p>David Gail Smith is a visual artist and creative coder based in Virginia. His work spans multiple media
              including painting, printmaking, generative art, fabrication, illustration, and photography.</p>
            <p>With a background in both traditional and digital art forms, David creates work that explores the
              intersection of technology and traditional art practices.</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <%- include('footer-modern'); %>

  <!-- JavaScript -->
  <script src="./js/modern.js"></script>