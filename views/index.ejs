<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="./images/favicon.ico">

  <title>David Gail Smith - Artist & Creative Coder</title>
  <meta name="author" content="David G. Smith">
  <meta name="description"
    content="Art gallery and portfolio for artist David Gail Smith, featuring original artwork, digital art, and creative coding projects.">
  <meta name="keywords" content="art, artist, painting, printmaking, generative art, creative coding, digital art">

  <!-- Preload critical resources -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="canonical" href="https://www.davidgailsmith.com" />

  <!-- Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Rock+Salt&family=Jura:wght@300;400;600&family=Share+Tech+Mono&display=swap"
    rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous" referrerpolicy="no-referrer">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="./css/modern.css">
</head>

<body class="bhf-light">
  <!-- Hidden data for JavaScript -->
  <script type="application/json" id="projects"><%- JSON.stringify(projects) %></script>
  <script type="application/json" id="categories"><%- JSON.stringify(categories) %></script>

  <%- include('header'); %>

  <main>
    <!-- Hero Section -->
    <section id="splash" class="hero-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <div id="hero-text" class="script-text">
              <h1 class="display-2 mb-4 p-4">David Gail Smith</h1>
              <p class="lead fs-3 mb-4">Artist & Creative Coder</p>
              <p class="fs-5 mb-5">Exploring the intersection of traditional art and digital innovation</p>
              <a href="#search-filter-section" class="btn btn-primary btn-lg">View My Work</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Selected Project Section -->
    <section id="selected-project-section" class="py-5 bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-4 mb-4" id="project-message">
            <div class="alert alert-primary text-center">
              Select a project below to view details
            </div>
          </div>

          <div class="col-lg-10 d-none" id="single-project">
            <!-- Individual project details will be loaded here -->
            <!-- Example structure for larger card:
            <div class="card selected-project-card shadow-lg mx-auto">
              <img src="..." class="selected-project-img" alt="...">
              <div class="selected-project-body">
                <h3>Project Title</h3>
                <p>Project details...</p>
              </div>
            </div>
            -->
          </div>
        </div>
      </div>
    </section>

    <!-- Search and Filter Section -->
    <section id="search-filter-section" class="py-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="search-filter-container" style="width: 80vw; max-width: 1200px;">
            <!-- Search Bar -->
            <div class="mb-4">
              <div class="input-group input-group-lg">
                <input type="text" class="form-control" id="search-term" placeholder="Search projects...">
                <button class="btn btn-outline-secondary" type="button">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>

            <!-- Filter Buttons -->
            <div class="text-center">
              <div class="btn-group-filter d-flex flex-wrap justify-content-center" role="group">
                <button type="button" class="btn btn-outline-primary filter-button active" id="all-filter">All</button>
                <button type="button" class="btn btn-outline-primary filter-button"
                  id="painting-filter">Painting</button>
                <button type="button" class="btn btn-outline-primary filter-button"
                  id="printmaking-filter">Printmaking</button>
                <button type="button" class="btn btn-outline-primary filter-button"
                  id="generative-filter">Generative</button>
                <button type="button" class="btn btn-outline-primary filter-button"
                  id="fabrication-filter">Fabrication</button>
                <button type="button" class="btn btn-outline-primary filter-button"
                  id="illustration-filter">Illustration</button>
                <button type="button" class="btn btn-outline-primary filter-button"
                  id="photography-filter">Photography</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Search Message -->
        <div class="row justify-content-center">
          <div class="col-12">
            <div id="search-message" class="alert alert-info d-none text-center">
              No projects found matching your search criteria.
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects-section" class="py-5 bg-light">
      <div class="container">
        <h2 class="text-center mb-5">Portfolio</h2>

        <!-- Projects Gallery -->
        <div class="row project-grid justify-content-center g-4" id="projects-grid">
          <% projects.forEach(function(project) { %>
          <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 d-flex justify-content-center mb-4"
            id="project-holder-<%= project.id %>">
            <%- include('projectCard', {image: project.img_url, name: project.project_name, ident: project.id, link: '/#single-project-area'}) %>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <h2 class="text-center mb-5">About the Artist</h2>
            <div class="row">
              <div class="col-md-4 text-center mb-4">
                <img src="./images/davidGailSmith.png" alt="David Gail Smith" class="img-fluid rounded-circle mb-3"
                  style="max-width: 200px;">
                <p class="mt-3">
                  <a href="https://www.dgs-creative.com" target="_blank" class="btn btn-outline-primary btn-sm">
                    I do freelance code work too.
                  </a>
                </p>
              </div>
              <div class="col-md-8">
                <h4 class="mb-2">TRADITIONAL MEETS FUTURISTIC</h4>
                <p>I am a visual artist currently based in Dallas, Texas. I began writing code as a teen on a TI-99/4a
                  and later an Apple //c until leaving home for college in the late 80s. Fast-forward three decades.
                  After retiring in 2014 from 21-year military aviation career, I now endeavor to rediscover the “energy
                  of wonder” I possessed as a young man before the military. Post-military, I completed 2 degrees: a BFA
                  in Studio Art and a BA in Creative Computation. Originally from Erie, Pennsylvania, I moved across the
                  U.S. several times while growing up and served nearly half of my military career overseas. My world
                  travels, exposure to many cultures, and life experiences have given me a unique perspective. My work
                  experiments across media, involving emotional introspection of my experiences and shared influences
                  with others in our world. I am on an eternal quest for themes that bind people, share cultures, and
                  celebrate humanity in pursuit of what is universal and simply put - beautiful and interesting. I seek
                  to defy stereotypes, transcend divisive and useless social and political assumptions, and connect with
                  anyone in search of common ground. With one foot in fine arts and another in computers, I strive to
                  combine art with technology, the traditional with the cutting-edge, and the ancient with the
                  futuristic, in search of an art that is the hybrid of historical tradition and future technology.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="py-5 bg-light">
      <div class="container justify-contents-center">
        <div class="text-center">
          <h2 class="text-center mb-3">What People Say</h2>
          <p class="fs-5 fw-bold">Hear what people are saying:</p>
        </div>
        <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item" data-bs-interval="5000">
              <div class="container">
                <div class="p-4 text-center">
                  <h3 class="fs-5 fst-italic script-text">"Dave will reach total enlightenment."</h3>
                  <div class="col-lg-6 mx-auto">
                    <p class="lead text-end">-The Lalai Dama</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="carousel-item active" data-bs-interval="5000">
              <div class="container">
                <div class="p-4 text-center">
                  <h3 class="fs-5 fst-italic script-text">"Far out, man!!!"</h3>
                  <div class="col-lg-6 mx-auto">
                    <p class="lead text-end">-The Dude</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="carousel-item" data-bs-interval="5000">
              <div class="container">
                <div class="p-4 text-center">
                  <h3 class="fs-5 fst-italic script-text">"Artistry and aviation swirled into an intoxicating cocktail."
                  </h3>
                  <div class="col-lg-6 mx-auto">
                    <p class="lead text-end">-Scartin Morsese</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <div class="text-center mb-4"></div>
        <p class="fs-6 fst-italic"><em>* Not an actual quote by this person.</em></p>
      </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <h2 class="text-center mb-4">Connect</h2>
            <p class="text-center mb-4">Get in touch to discuss commissions, collaborations, or just to say hello. Like
              this site? I also do <a href="https://www.dgs-creative.com" target="_blank"
                class="text-decoration-none">freelance code</a> development.</p>

            <form id="contact-form" novalidate>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="contact-first" class="form-label">First Name</label>
                  <input type="text" class="form-control" id="contact-first" required>
                  <div class="invalid-feedback">Please provide your first name.</div>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="contact-last" class="form-label">Last Name</label>
                  <input type="text" class="form-control" id="contact-last" required>
                  <div class="invalid-feedback">Please provide your last name.</div>
                </div>
              </div>

              <div class="mb-3">
                <label for="contact-email" class="form-label">Email</label>
                <input type="email" class="form-control" id="contact-email" required>
                <div class="invalid-feedback">Please provide a valid email address.</div>
              </div>

              <div class="mb-3">
                <label for="contact-message" class="form-label">Message</label>
                <textarea class="form-control" id="contact-message" rows="5" required></textarea>
                <div class="invalid-feedback">Please provide a message.</div>
              </div>

              <!-- Honeypot field for spam protection -->
              <input type="text" id="ftb" style="display: none;" tabindex="-1" autocomplete="off">

              <div class="text-center">
                <button type="button" class="btn btn-primary" id="send-contact">Send Message</button>
                <div class="mt-3">
                  <button type="button" class="btn btn-link" id="contact-button-response">Reset Form</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('footer'); %>

  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>

  <!-- Custom JavaScript -->
  <script type="module" src="./js/index.js"></script>
</body>

</html>