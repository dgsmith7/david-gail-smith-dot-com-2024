<div class="card m-2 h-100 fadein shadow-lg">
  <img src="<%=image %>" class="card-img-top" alt="An image of the <%= name %> project">
  <div class="title-box h-100">
    <div class="card-title col text-center">
      <p class="h4 m-2">
        <strong>
          <%= name %>
        </strong>
      </p>
    </div>
  </div>
  <div class="card-footer">
    <a href="/#single-project-area"><button id="b-<%= ident %>"
        class="buttons-light project-link btn btn-outline-light">Select Project</button></a>
  </div>
</div>